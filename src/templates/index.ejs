<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/assets/css/index.css" />
  <title>Document</title>
</head>

<body>
  <%- include("partials/nav") %>
    <main class="main">
      <dev class="main__container">
        <h1>Verify Certificate</h1>
        <div class="form">
          <input type="text" placeholder="Certificate Code" />
          <button class="sumitButton">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48">
              <g fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="4">
                <path d="M21 38c9.389 0 17-7.611 17-17S30.389 4 21 4S4 11.611 4 21s7.611 17 17 17Z" />
                <path stroke-linecap="round"
                  d="M26.657 14.343A7.975 7.975 0 0 0 21 12a7.975 7.975 0 0 0-5.657 2.343m17.879 18.879l8.485 8.485" />
              </g>
            </svg>
          </button>
          </d>
      </dev>
    </main>

    <script>
      const submitButton = document.querySelector(".sumitButton")
      const input = document.querySelector("input")
      submitButton.onclick = function (event) {
        window.location.href = `/preview/${input.value}`
      }
    </script>
</body>

</html>